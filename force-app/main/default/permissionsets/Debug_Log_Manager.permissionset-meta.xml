<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Debug Log Manager</label>
    <description>Grants access to the Delete All Debug Logs utility bar button. Assign only to trusted developers/admins.</description>
    <hasActivationRequired>false</hasActivationRequired>

    <!-- Custom Permission gate -->
    <customPermissions>
        <enabled>true</enabled>
        <name>Delete_Debug_Logs</name>
    </customPermissions>

    <!-- Apex class access -->
    <classAccesses>
        <apexClass>DebugLogManagerController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
</PermissionSet>
